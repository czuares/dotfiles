#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

mkdir -p /Volumes/CZ/WorkHome

rsync -avzh --progress \
    --delete --size-only \
    --exclude=Library \
    --exclude=Pictures \
    --exclude="VirtualBox VMs" \
    --exclude=go/src \
    --exclude=node \
    --exclude=.local/venvs \
    --exclude=.cache \
    --exclude=.cookiecutters \
    --exclude=.gradle \
    --exclude=.m2 \
    --exclude=.atom \
    --exclude=.npm \
    --exclude=.node-gyp \
    --exclude=.sdkman \
    --exclude=.helm \
    --exclude=.terraform \
    --exclude=.terraform.d \
    --exclude=.virtualenvs \
    --exclude=.vscode \
    --exclude=.Trash \
    --exclude=.kube/cache \
    --exclude=.kube/http-cache \
    --exclude=.vs-kubernetes \
    --exclude=.minikube \
    --exclude=.pyenv \
    --exclude=.vim/session \
    --exclude=.vim/plugged \
    --exclude=.vim/undo \
    --exclude=.tldrc \
    ~/ /Volumes/CZ/WorkHome
